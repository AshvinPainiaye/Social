{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show">
    <p>{{ 'profile.show.username'|trans }}: {#{ user.username }#}</p>
    <p>{{ 'profile.show.email'|trans }}: {#{ user.email }#}</p>

    {% for user in user %}

    {% if app.request.get('id') == user.username %}

    {{ user.username }}
    {{ user.email }}


    {% endif %}


    {% endfor %}

<br><br><br>

    {% if app.user == app.request.get('id') %}

    <a href="{{path('fos_user_change_password', {'id': app.user })}}">Modifier mot de passe</a> | <a href="{{path('fos_user_profile_edit', {'id': app.user })}}">Modifier compte</a>

    {% endif %}

</div>
